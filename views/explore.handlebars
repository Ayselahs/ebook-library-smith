{{> header}}
<br />
<main class="container">
    <h1>Explore</h1>
    <form action="/explore/search" method="get">
        <div class="input-group input-group-sm b-3 justify-content-center">
            <label class="form-label" for="searchInput"> </label>
            <input class="form-control" type="text" style="max-width: 350px" id="searchInput" name="q"
                aria-label="Search here" aria-required="true">
            <button class="btn btn-success" id="button-addon2" type="submit">Search Now</button>
        </div>

    </form>
    <div>
        <br />
    </div>

    <ul class="row justify-content-center">
        {{#each displayedBooks}}

        <div class="card mb-3" style="max-width: 350px">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{this.picture}}" class="img-fluid rounded-start" alt="{{this.title}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h6 class="card-title"><a href="{{this.link}}" target="_blank">{{this.title}} </a></h6>
                        <p class="card-text">by {{this.authors}} - {{this.genre}}</p>
                        <div class="text-right">
                            <form action="/explore/add" method="post">
                                <input type="hidden" name="title" value="{{this.title}}">
                                <input type="hidden" name="authors" value="{{this.authors}}">
                                <input type="hidden" name="genre" value="{{this.genre}}">
                                <input type="hidden" name="picture" value="{{this.picture}}">
                                <button class="btn btn-success" type="submit">Add to Library</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <br />



        {{/each}}
    </ul>

</main>